<launch>

  <arg name="use_keyboard" default="false" />
    <group if="$(arg use_joy)">
      <node name="teleop_twist_keyboard.py" pkg="teleop_twist_keyboard" type="teleop_twist_keyboard.py" />
    </group>

    <group unless="$(arg use_keyboard)">
      <node name="joy_node" pkg="joy" type="joy_node">
	<remap from="cmd_vel" to="/robot/basic_actuate"/>
      </node>

      <node name="teleop_node" pkg="teleop_twist_joy" type="teleop_node">
        <remap from="cmd_vel" to="/robot/basic_actuate"/>
     </node>

    </group>

</launch>
